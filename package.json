{
  "name": "@rljson/hash",
  "version": "0.0.6",
  "packageManager": "pnpm@10.6.2",
  "description": "Deeply apply hashes to JSON data",
  "homepage": "https://github.com/rljson/hash",
  "bugs": "https://github.com/rljson/hash/issues",
  "access": "public",
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rljson/hash.git"
  },
  "main": "dist/hash.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "npx vite build && tsc && cp README* dist && mkdir dist/src && cp src/example.ts dist/src",
    "test": "npx vitest run --coverage && npm run lint",
    "prebuild": "npm run test",
    "prepublishOnly": "npm run build",
    "lint": "npx eslint",
    "updateGoldens": "cross-env UPDATE_GOLDENS=true npm test"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitest/coverage-v8": "^3.0.8",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.0.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.1",
    "vite-node": "^3.0.8",
    "vite-plugin-dts": "^4.5.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8",
    "vitest-dom": "^0.1.1"
  },
  "peerDependencies": {
    "@aws-crypto/sha256-js": "^5.2.0",
    "@rljson/json": "^0.0.4",
    "js-base64": "^3.7.7"
